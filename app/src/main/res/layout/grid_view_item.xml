<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/horizontal_margin_small"
    card_view:cardCornerRadius="@dimen/cardView_corner_radius"
    card_view:contentPadding="@dimen/cardView_padding" >
    <ImageView android:id="@+id/imageView_grid_item"
        android:layout_width="@dimen/imageView_grid_item_width"
        android:layout_height="@dimen/imageView_grid_item_heigth"
        android:contentDescription="@string/grid_view_image_description"
        android:padding="@dimen/horizontal_margin_small"
        android:scaleType="centerCrop" />
</android.support.v7.widget.CardView>
